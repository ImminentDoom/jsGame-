<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<style>
canvas {
    border:1px solid #d3d3d3;
    background-color: rgba(0, 0, 0, 1);
}
</style>
</head>
<body onload="startGame()">
<script>

var myGamePiece, EnemyPiece;

//Create these pieces at the start of the game
function startGame() {
    myGameArea.start();
    myGamePiece = new component(30, 30, "https://cdn.tutsplus.com/mobile/uploads/legacy/Corona-SDK_Build-Space-Shooter/1/9.png", 240, 230, "image");
	EnemyPiece = new component(30, 30, "red", 240, 0);
}

//Setting up game area
var myGameArea = {
    canvas : document.createElement("canvas"),
    start : function() {
        this.canvas.width = 480;
        this.canvas.height = 270;
        this.context = this.canvas.getContext("2d");
        document.body.insertBefore(this.canvas, document.body.childNodes[0]);
        this.interval = setInterval(updateGameArea, 20);
		window.addEventListener('keydown', function (e) {
            myGameArea.keys = (myGameArea.keys || []);
            myGameArea.keys[e.keyCode] = true;
        })
        window.addEventListener('keyup', function (e) {
            myGameArea.keys[e.keyCode] = false; 
        })
    },
    clear : function() {
        this.context.clearRect(0, 0, this.canvas.width, this.canvas.height);
    }
}

//Set coords speed and draw image
function component(width, height, color, x, y, type) {
	this.type = type;
	if (type == "image") {
    this.image = new Image();
    this.image.src = color;
  }
    this.width = width;
    this.height = height;
	this.speedX = 0;
    this.speedY = 0;
    this.x = x;
    this.y = y;
	this.update = function(){    
   		ctx = myGameArea.context;
		if (type == "image") {
      ctx.drawImage(this.image, 
        this.x, 
        this.y,
        this.width, this.height);
		} else {
    		ctx.fillStyle = color;
    		ctx.fillRect(this.x, this.y, this.width, this.height);
		}
	}
	this.newPos = function() {
        this.x += this.speedX;
        this.y += this.speedY; 
    } 
}

//Update frames
function updateGameArea() {
	myGameArea.clear();
	myGamePiece.speedX = 0;
    myGamePiece.speedY = 0; 
	// Move player
	if (myGameArea.keys && myGameArea.keys[37]) {myGamePiece.speedX = -3;}
    if (myGameArea.keys && myGameArea.keys[39]) {myGamePiece.speedX = 3; }
    if (myGameArea.keys && myGameArea.keys[38]) {myGamePiece.speedY = -3; }
    if (myGameArea.keys && myGameArea.keys[40]) {myGamePiece.speedY = 3; }
	EnemyPiece.y += 1;
	myGamePiece.newPos(); 
    myGamePiece.update();
	EnemyPiece.update();
}

</script>

</body>
</html>
